<div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
  <div style="width: 500px;">
    <h2 style="text-align: center;">Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <i class="fas fa-envelope"></i>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",  style: "width: 100%;", class: "form-control"  %><br>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", style: "width: 100%;", class: "form-control" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>