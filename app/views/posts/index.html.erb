<style>
.zoom {
  transition: transform .2s; /* Animation */
}

.zoom:hover {
  transform: scale(1.2); /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
}
</style>

<div style ="color: black">
<h1 style ="text-align:center">Posts</h1>

<div id="posts">
<div class="row" style="width:100%">
  <% @posts.each do |post| %>
  <%= link_to post, style: "color:black; text-decoration:none" do %>
  <div class="col-lg-6 mx-auto mb-4 zoom">
    <ul class="list-group shadow">
      <div class="media align-items-lg-center flex-column flex-lg-row p-3">
        <div class="media-body order-2 order-lg-1">
          <h5 class="mt-0 font-weight-bold mb-2"><%= post.title %></h5>
          <div class="d-flex align-items-center justify-content-between mt-1">
            <h6 class="font-weight-bold my-2">
              <% if post.type.name !="Selling"%>
              <%= post.type.name %>
              <% else %>
              <%= post.price %>
              <% end %>
            </h6>
          </div>
        </div>
        <div class="ml-lg-5 order-1 order-lg-2" style ="font-weight: 100; font-size: 12px"> posted
        <%= time_ago_in_words(post.created_at) %> ago
        </div>
        <% if post.allimages.presence %>
        <%= image_tag post.allimages.first , alt: "Generic placeholder image", width: 200, class: "ml-lg-5 order-1 order-lg-2" %>
        <% else %>
        <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/thumb/3/3b/American-cockroach.jpg/640px-American-cockroach.jpg" , alt: "Generic placeholder image", width: 200, class: "ml-lg-5 order-1 order-lg-2" %>
        <% end %>
      </div>
    </ul>
  </div>
  <% end %>
   </div>
  </p>

  <% end %>
</div>
</div>
