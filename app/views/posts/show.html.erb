<div id="<%= dom_id @post %>">
  <p>
    <strong>Naslov:</strong>
    <%= @post.title %> 
  </p>
    <p>
    <strong>Body:</strong>
    <%= @post.body %>
  </p>
  <p>
    <strong>Avtor:</strong>
    <%= @post.user.name %>
  </p>
</div>

<%if(current_user == @post.user)%>
  <div>
    <%= link_to "Edit this post", edit_post_path(@post) %> |
    <%= link_to "Back to posts", posts_path %>

    <%= button_to "Destroy this post", @post, method: :delete %>
  </div>
<%else%>
  <div>
    <%= link_to "Message this seller", @convo, data: { turbo_method: :post } %>
  </div>
<%end%>

